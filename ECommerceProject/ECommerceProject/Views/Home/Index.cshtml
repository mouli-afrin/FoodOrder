@using ECommerceProject.Models;
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Products>
@{
    ViewData["Title"] = "Home Page";
}
<br /><br />
<div class="container">
<div class="row shadow rounded">
    <div class="col-sm-12 col-md-6 col-lg-6 col-xl6">
        <div id="carouselExampleSlidesOnly" class="carousel slide " data-bs-ride="carousel">
            <div class="carousel-inner h-100">
                <div class="carousel-item h-100 active">
                    <img src="./images/carouselimages/chad-montano-mqt0asuolcu-unsplash.jpg" class="d-block w-100 h-100" alt="Recipes">
                </div>
                <div class="carousel-item h-100">
                    <img src="./images/carouselimages/saktheeswara-govindarajan-yclcdykm44.jpg" class="d-block w-100 h-100" alt="Recipes">
                </div>
                <div class="carousel-item h-100">
                    <img src="./images/carouselimages/sanket-shah-eewlcfydzq4-unsplash.jpg" class="d-block w-100 h-100" alt="Recipes">
                </div>
            </div>

        </div>

    </div>
    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="mb-3">
            <h2>
                Get The Best<span class="text-success fst-italic"> Food </span> From
                <span class="text-success">The Best Homemaker</span>
            </h2>
        </div>
        <div class="mb-1 p-3">
            <span><i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
            <span class="fs-5 text-dark fst-italic">Fresh Food</span>
        </div>
        <div class="mb-1 p-3">
            <span><i class="fa-solid fa-wheat-awn text-success mx-2 fs-4"></i></span>
            <span class="fs-5 text-dark fst-italic">Healthy Meal</span>
        </div>
        <div class="mb-1 p-3">
            <span><i class="fa-solid fa-person-biking text-success mx-2 fs-4"></i></span>
            <span class="fs-5 text-dark fst-italic">Fastest Delivery</span>
            <p class="py-2">We Promise Delivery Order Within 30 Min</p>
        </div>

    </div>
</div>
</br>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 200px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px;color: #a51313"><b>Price : @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c), PagedListRenderOptionsBase.PageNumbersOnly)
</div>
</div>
